create table krasas (   
ID number(4,0) not null constraint color_pk primary key,   
kods varchar2(5),   
nosaukums varchar2(15));
 
alter table krasas
add constraint code_con CHECK (kods not like '%[^0-9A-Z]%');
 
CREATE SEQUENCE seq_color
MINVALUE 1
START WITH 1
INCREMENT BY 1
CACHE 10;

ALTER TABLE krasas
ADD UNIQUE (kods); 
 
select * from krasas;

insert into krasas values (seq_color.nextval,'WHITE','balta');
insert into krasas values (seq_color.nextval,'BLACK','melna');
 
